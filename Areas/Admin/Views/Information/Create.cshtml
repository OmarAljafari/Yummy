@model Yummy.Models.Information

@{
    ViewData["Title"] = "Create";
}

<div class="full_container">
    <div class="container">
        <div class="center verticle_center full_height">
            <div class="login_section">

                <div class="logo_login">
                    <div class="center">
                        <img width="210" src="~/images/logo/logo.png" alt="#" />
                    </div>
                </div>

                <div class="login_form">

                    <form asp-action="Create" class="row g-3">
                        <fieldset>
                            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                            <div class="field">
                                <label asp-for="InformationDescription" class="control-label"></label>
                                <input asp-for="InformationDescription" class="form-control" />
                                <span asp-validation-for="InformationDescription" class="text-danger"></span>
                            </div>
                            <div class="field">
                                <label asp-for="InformationName" class="control-label"></label>
                                <input asp-for="InformationName" class="form-control" />
                                <span asp-validation-for="InformationName" class="text-danger"></span>
                            </div>
                            <div class="field">
                                <label asp-for="InformationIcon" class="control-label"></label>
                                <input asp-for="InformationIcon" class="form-control" />
                                <span asp-validation-for="InformationIcon" class="text-danger"></span>
                            </div>
                            <div class="field">
                                <label asp-for="InformationRedirect" class="control-label"></label>
                                <input asp-for="InformationRedirect" class="form-control" />
                                <span asp-validation-for="InformationRedirect" class="text-danger"></span>
                            </div>

                            <div class="text-center mb-2 ">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                            <div class="text-center">
                                <a asp-action="Index" class="btn btn-success">Back to Table</a>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>