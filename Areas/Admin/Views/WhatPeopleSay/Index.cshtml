@model IEnumerable<Yummy.Models.WhatPeopleSay>

@{
    ViewData["Title"] = "Index";
}
<div class="full_container">
    <div class="container">
        <div class="full_height">
            <div class="col-md-12 mb-3">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>

                                <a asp-action="Create">Create New</a>

                            </h2>
                        </div>
                    </div>
                    <div class="table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <table class="table table-dark table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.WhatPeopleSayDescription)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.WhatPeopleSayImage)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.WhatPeopleSayIconEndOfDesc)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.WhatPeopleSayIconStartOfDesc)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.WhatPeopleSayIconRate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.WhatPeopleSayJob)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.WhatPeopleSayName)
                                        </th>
                                        

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.WhatPeopleSayDescription)
                                            </td>
                                            <td>
                                                <img src="~/WhatPeopleSayImg/@item.WhatPeopleSayImage" style="width:90px;height:90px" />
                                            </td>
                                            
                                            <td>
                                                @Html.DisplayFor(modelItem => item.WhatPeopleSayIconEndOfDesc)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.WhatPeopleSayIconStartOfDesc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.WhatPeopleSayIconRate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.WhatPeopleSayJob)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.WhatPeopleSayName)
                                            </td>
                                           

                                            <td>
                                                <a asp-action="Edit" asp-route-id=@item.WhatPeopleSayId><i class="fa fa-edit"> </i></a> |
                                                <a href="" class="linkDele" data-toggle="modal" data-target="#myModal" data-path=@Url.ActionLink("Delete","WhatPeopleSay",new{idDelete = item.WhatPeopleSayId})><i class="fa fa-close"></i></a>      |
                                                @if (item.IsActive)
                                                {
                                                    <a asp-action="Active" asp-route-idActive=@item.WhatPeopleSayId><i class="fa fa-eye"></i></a>
                                                }
                                                else
                                                {
                                                    <a asp-action="Active" asp-route-idActive=@item.WhatPeopleSayId><i class="fa fa-eye-slash"></i></a>

                                                }

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal body -->
            <div class="modal-body">
                Are you sure?
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button id="DeleBtn" type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
                <button id="BtnCan" type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/jquery/jquery.js"></script>

<script>
    var data = "";
    $(".linkDele").click(function () {
        data = $(this).data("path")
    })

    $("#DeleBtn").click(function () {
        window.location = data;
        data = ""
    })

    $("#BtnCan").click(function () {
        data = ""
    })
</script>